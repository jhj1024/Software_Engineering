<body>
	<% include header.html %>
	<!-- #header -->

			<!-- start banner Area -->
			<section class="about-banner relative">
				<div class="overlay overlay-bg"></div>
				<div class="container">				
					<div class="row d-flex align-items-center justify-content-center">
						<div class="about-content col-lg-12">
							<h1 class="text-white">
								Tour Packages				
							</h1>	
							<p class="text-white link-nav"><a href="/index">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="/packages"> Tour Packages</a></p>
						</div>	
					</div>
				</div>
			</section>
			<!-- End banner Area -->	

			<!-- Start hot-deal Area -->
			
			<!-- End hot-deal Area -->
			

			<!-- Start destinations Area -->
			<section class="destinations-area section-gap">
				<div class="container">
		            <div class="row d-flex justify-content-center">
		                <div class="menu-content pb-40 col-lg-8">
		                    <div class="title text-center">
		                        <h1 class="mb-10">Popular Destinations</h1>
		                        <p>We all live in an age that belongs to the young at heart. Life that is becoming extremely fast, day to.</p>
		                    </div>
		                </div>
		            </div>						
					<div class="row">
							<%
								for(var i =0; i<rows.length; i++){
									var oneItem = rows[i];
							%>	
								<div class="col-lg-4">
									<div class="single-destinations">
										<div class="thumb">
											<img style="width: 440px; height: 200px;" src="../img/packages/<%=oneItem.package_img%>" alt="">
										</div>
										<div class="details">
											<h4><%=oneItem.package_id%></h4>
										
										<ul class="package-list">
											<li class="d-flex justify-content-between align-items-center">
												<span>Duration</span>
												<span><%=oneItem.package_term%></span>
											</li>
											<li class="d-flex justify-content-between align-items-center">
												<span>Start Date</span>
												<span><%=oneItem.package_start%></span>
											</li>
											<li class="d-flex justify-content-between align-items-center">
												<span>End Date</span>
												<span><%=oneItem.package_arrive%></span>
											</li>
											<li class="d-flex justify-content-between align-items-center">
												<span>최대인원</span>
												<span><%=oneItem.package_validity%>명</span>
											</li>
											<li class="d-flex justify-content-between align-items-center">
												<span>Price per person</span>
												<a href="/product/<%=oneItem.package_id%>" class="price-btn"><%=oneItem.package_cost%>0,000원</a>
											</li>													
										</ul>
									</div>
											
								</div>
							</div>
							<%
								}
							%>
					</div>
				</div>	
			</section>
			<!-- End destinations Area -->
			

			<!-- Start home-about Area -->
			
			<!-- End home-about Area -->

			<!-- start footer Area -->		
			<% include footer.html %>
			<!-- End footer Area -->	

			<script src="js/vendor/jquery-2.2.4.min.js"></script>
			<script src="js/popper.min.js"></script>
			<script src="js/vendor/bootstrap.min.js"></script>			
			<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBhOdIF3Y9382fqJYt5I_sswSrEw5eihAA"></script>		
 			<script src="js/jquery-ui.js"></script>					
  			<script src="js/easing.min.js"></script>			
			<script src="js/hoverIntent.js"></script>
			<script src="js/superfish.min.js"></script>	
			<script src="js/jquery.ajaxchimp.min.js"></script>
			<script src="js/jquery.magnific-popup.min.js"></script>						
			<script src="js/jquery.nice-select.min.js"></script>					
			<script src="js/owl.carousel.min.js"></script>							
			<script src="js/mail-script.js"></script>	
			<script src="js/main.js"></script>	
		</body>
	</html>