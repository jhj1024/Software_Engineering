	<!-- Mobile Specific Meta -->
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- Favicon-->
	<link rel="shortcut icon" href="../img/fav.png">
	<!-- Author Meta -->
	<meta name="author" content="colorlib">
	<!-- Meta Description -->
	<meta name="description" content="">
	<!-- Meta Keyword -->
	<meta name="keywords" content="">
	<!-- meta character set -->
	<meta charset="UTF-8">
	<!-- Site Title -->
	<title>Travel</title>

	<link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">
	<!--
			CSS
			============================================= -->
	<link rel="stylesheet" href="../css/common.min.css" type="text/css" />
	<link rel="stylesheet" href="../css/side.css" type="text/css" />		
	<link rel="stylesheet" href="../css/search.min.css" type="text/css" />
	<link rel="stylesheet" href="../css/linearicons.css">
	<link rel="stylesheet" href="../css/font-awesome.min.css">
	<link rel="stylesheet" href="../css/bootstrap.css">
	<link rel="stylesheet" href="../css/magnific-popup.css">
	<link rel="stylesheet" href="../css/jquery-ui.css">
	<link rel="stylesheet" href="../css/nice-select.css">
	<link rel="stylesheet" href="../css/animate.min.css">  
	<link rel="stylesheet" href="../css/owl.carousel.css">
	<link rel="stylesheet" href="../css/main.css">

</head>

<body>
	<% include header.html %>
	<!-- #header -->

			<!-- start banner Area -->
			<section class="about-banner relative">
				<div class="overlay overlay-bg"></div>
				<div class="container">				
					<div class="row d-flex align-items-center justify-content-center">
						<div class="about-content col-lg-12">
							<h1 class="text-white">
								Tour Packages				
							</h1>	
							<p class="text-white link-nav"><a href="/index">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="/packages"> Tour Packages</a></p>
						</div>	
					</div>
				</div>
			</section>
			<!-- End banner Area -->	

			<!-- Start hot-deal Area -->
			<section class="hot-deal-area section-gap">
				<div class="container">
		            <div class="row d-flex justify-content-center">
		                <div class="menu-content pb-70 col-lg-8">
		                    <div class="title text-center">
		                        <h1 class="mb-10">곧 패키지가 마감됩니다.</h1>
		                        <p>마감 인원이 얼마 남지 않았습니다. 지금 빨리 예약하세요!</p>
		                    </div>
		                </div>
		            </div>						
					<div class="row justify-content-center">
						<div class="col-lg-10 active-hot-deal-carusel">
							<%
								for(var i =0; i<rows.length; i++){
								var oneItem = rows[i];
								if( oneItem.package_validity > 18 )
									continue;
							%>
							<div class="single-carusel">
								<div class="thumb relative">
									<div class="overlay overlay-bg"></div>
									<img class="img-fluid" style="width: 920px; height: 600px;" src="../img/packages/<%=oneItem.package_img%>" alt="">
								</div>
								<div class="price-detials">
									<a href="#" class="price-btn">cost <span><%=oneItem.package_cost%>0,000원</span></a>
								</div>
								<div class="details">
									<h4 class="text-white"><%=oneItem.package_id%></h4>
									<p class="text-white">
											<%=oneItem.package_term%>
									</p>
								</div>								
							</div>
							<%
								}
							%>														
						</div>
					</div>
				</div>	
			</section>
			<!-- End hot-deal Area -->
			

			<!-- Start destinations Area -->
			<section class="destinations-area section-gap" id=package_info>
					<div class="container">
						<div class="row d-flex justify-content-center">
							<div class="menu-content pb-40 col-lg-8">
								<div class="title text-center">
									<h1 class="mb-10">All Packages</h1>
									<p>We all live in an age that belongs to the young at heart. Life that is becoming extremely fast, day to.</p>
								</div>
							</div>
						</div>
						<div class="button-group-area mt-10">
								<%
									for(var i =0; i<1; i++){
									var oneItem = rows[i];
									if( oneItem != null ){
								%>	
								<a href="/packages_sort/<%=rows[0].tour_id%>?sort=lowprice#package_info" class="genric-btn primary-border radius" id="lowprice" name="sort">낮은가격순</a>
								<a href="/packages_sort/<%=rows[0].tour_id%>?sort=highprice#package_info" class="genric-btn success-border radius" id="highprice" name="sort">높은가격순</a>
								<a href="/packages_sort/<%=rows[0].tour_id%>?sort=hit#package_info" class="genric-btn info-border radius" id="hit" name="sort">인기순</a>
								<a href="/packages_sort/<%=rows[0].tour_id%>?sort=named#package_info" class="genric-btn warning-border radius" id="named" name="sort">이름순</a>
							<%
									}
								}
							%>
						</div>									
					<div class="row">
						<%
						
							for(var i =0; i<rows.length; i++){
							var oneItem = rows[i];
						%>	
						<div class="col-lg-4">
							<div class="single-destinations">
								<div class="thumb">
									<img style="width: 440px; height: 200px;" src="../img/packages/<%=oneItem.package_img%>" alt="">
								</div>
								<div class="details">
									<h4><%=oneItem.package_id%></h4>
						
									<ul class="package-list">
										<li class="d-flex justify-content-between align-items-center">
											<span>Duration</span>
											<span><%=oneItem.package_term%></span>
										</li>
										<li class="d-flex justify-content-between align-items-center">
											<span>Start Date</span>
											<span><%=oneItem.package_start%></span>
										</li>
										<li class="d-flex justify-content-between align-items-center">
											<span>End Date</span>
											<span><%=oneItem.package_arrive%></span>
										</li>
										<li class="d-flex justify-content-between align-items-center">
											<span>최대인원</span>
											<span><%=oneItem.package_validity%>명</span>
										</li>
										<li class="d-flex justify-content-between align-items-center">
											<span>Price per person</span>
											<a href="/product/<%=oneItem.package_id%>" class="price-btn"><%=oneItem.package_cost%>0,000원</a>
										</li>													
									</ul>
								</div>
								
							</div>
						</div>
						<%
							}
						%>
					</div>																		
					</div>
				</div>	
			</section>
			<!-- End destinations Area -->
			

			<!-- Start home-about Area -->
			
			<!-- End home-about Area -->

			<!-- start footer Area -->		
			<% include footer.html %>
			<!-- End footer Area -->	

			<script src="../js/vendor/jquery-2.2.4.min.js"></script>
			<script src="../js/popper.min.js"></script>
			<script src="../js/vendor/bootstrap.min.js"></script>			
			<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBhOdIF3Y9382fqJYt5I_sswSrEw5eihAA"></script>		
 			<script src="../js/jquery-ui.js"></script>					
  			<script src="../js/easing.min.js"></script>			
			<script src="../js/hoverIntent.js"></script>
			<script src="../js/superfish.min.js"></script>	
			<script src="../js/jquery.ajaxchimp.min.js"></script>
			<script src="../js/jquery.magnific-popup.min.js"></script>						
			<script src="../js/jquery.nice-select.min.js"></script>					
			<script src="../js/owl.carousel.min.js"></script>							
			<script src="../js/mail-script.js"></script>	
			<script src="../js/main.js"></script>	
		</body>
	</html>